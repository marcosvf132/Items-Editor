        </Grid>

        <Grid Grid.Row="1">
            <ListBox x:Name="ItemsList" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" VerticalContentAlignment="Top" Background="White" VirtualizingStackPanel.IsVirtualizing="True" VirtualizingStackPanel.VirtualizationMode="Standard" BorderThickness="1,25,1,1" BorderBrush="#FFD6D5D5" ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                <ListBox.ItemContainerStyle>
                    <Style TargetType="{x:Type ListBoxItem}">
                        <Setter Property="IsSelected" Value="{Binding Content.IsSelected, Mode=TwoWay, RelativeSource={RelativeSource Self}}"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="{x:Type ListBoxItem}">
                                    <ContentPresenter/>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </ListBox.ItemContainerStyle>
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Grid Margin="0,2,0,2">
                            <Rectangle Fill="#1E4D6886" Width="1000"/>
                            <Grid MouseEnter="OnItemMouseEnter" MouseLeave="OnItemMouseLeave" MouseDown="OnItemMouseDown" DataContext="{Binding FromID}">
                                <Rectangle Width="5" Margin="0,2,5,2" HorizontalAlignment="Left" Fill="#FF00C700"/>
                                <Rectangle Fill="#594D6886" Stroke="White" Opacity="0"/>
                            </Grid>
                            <VirtualizingStackPanel Orientation="Horizontal" Margin="10,0,0,0" IsHitTestVisible="False">
                                <VirtualizingStackPanel Orientation="Vertical" Width="1000">
                                    <VirtualizingStackPanel Orientation="Horizontal">
                                        <TextBlock Text="{Binding Name}" VerticalAlignment="Center" Foreground="#FF2D5887"/>
                                        <TextBlock Text="{Binding Tag}" VerticalAlignment="Center" Foreground="#FF2D5887" Opacity="0.4"/>
                                    </VirtualizingStackPanel>
                                    <VirtualizingStackPanel Orientation="Horizontal">
                                        <TextBlock Text="From ID:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                                        <TextBlock Text="{Binding FromID}" VerticalAlignment="Center" Foreground="#FF4D6886"/>
                                        <TextBlock Text="- To ID:" VerticalAlignment="Center" Margin="5,0,5,0"/>
                                        <TextBlock Text="{Binding ToID}" VerticalAlignment="Center" Foreground="#FF4D6886"/>
                                    </VirtualizingStackPanel>
                                </VirtualizingStackPanel>
                            </VirtualizingStackPanel>
                        </Grid>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Grid>

        <Grid Grid.Row="2" HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel Orientation="Horizontal" Margin="0,5,0,5" HorizontalAlignment="Center">
                <TextBlock Text="Order by:" Margin="0,0,5,0" VerticalAlignment="Center"/>
                <ComboBox x:Name="Sort">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="{Binding Name}" VerticalAlignment="Center" />
                            </StackPanel>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
                <Button Content="Sort" Margin="10,0,0,0" Click="SortButton_Click"/>
            </StackPanel>
        </Grid>

    </Grid>
</Window>
